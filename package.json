{
  "name": "shellui",
  "version": "0.1.0",
  "description": "A modern web interface for running shell commands",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:client": "cd src/client && bun run dev",
    "build": "npm run build:client && npm run build:server",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target node",
    "build:client": "cd src/client && vite build",
    "start": "NODE_ENV=production bun run dist/server/index.js"
  },
  "keywords": [
    "shell",
    "web",
    "interface",
    "command",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/jwt": "^1.3.1",
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/websocket": "^0.2.8",
    "@types/ws": "^8.18.1",
    "elysia": "^1.3.5",
    "js-yaml": "^4.1.0",
    "ws": "^8.18.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "22",
    "concurrently": "^9.2.0",
    "typescript": "5"
  },
  "packageManager": "yarn@4.9.2"
}
